<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="PustakaLokam.library.controller.report.BooksPerCategoryReportController"
            prefWidth="400" prefHeight="300">
    <children>
        <Label text="Books Per Category" layoutX="120" layoutY="10" style="-fx-font-size: 18px;"/>
        <TableView fx:id="booksPerCategoryTable" layoutX="20" layoutY="50" prefWidth="360" prefHeight="220">
            <columns>
                <TableColumn fx:id="categoryColumn" text="Category" prefWidth="200"/>
                <TableColumn fx:id="countColumn" text="Count" prefWidth="140"/>
            </columns>
        </TableView>
    </children>
</AnchorPane>
