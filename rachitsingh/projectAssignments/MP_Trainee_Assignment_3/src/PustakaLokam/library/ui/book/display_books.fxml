<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
	fx:controller="PustakaLokam.library.controller.book.DisplayBookController"
	spacing="10" prefWidth = "400" prefHeight = "300">
	<padding>
		<Insets top="20" right="20" bottom="20" left="20" />
	</padding>

	<Label text="All Available Books in 'PustakaLokam' Library"
		style="-fx-font-size: 18px; -fx-font-weight: bold;" />

	<TableView fx:id="booksTable" prefHeight="400">
		<columns>
			<TableColumn fx:id="titleAttribute" text="Title" />
			<TableColumn fx:id="authorAttribute" text="Author" />
			<TableColumn fx:id="categoryAttribute" text="Category" />
			<TableColumn fx:id="conditionAttribute" text="Condition" />
			<TableColumn fx:id="availableAttribute"
				text="Availability" />
		</columns>
	</TableView>
</VBox>